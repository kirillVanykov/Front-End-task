.slider-price-name
	width 400px
	height 18px
	padding-top 30px
	padding-bottom 35px
	margin auto
	text-align center
.slider-price-name-first-icon
	display inline-block
	float left
	margin-top 4px
.slider-price-name-last-icon
	display inline-block
	float right
	margin-top 4px
.slider-price-name-first-icon-small
	display none
	float left
	margin-top 7px
.slider-price-name-last-icon-small
	display none
	float right
	margin-top 7px
.slider-price-name-name
	display inline-block
	font-size 18px
.slick-active
	opacity: 0

.slick-prev:before,
.slick-next:before
	color: black

.slick-slide
	margin: 0px 20px
	transition: all ease-in-out .3s
	opacity: .2
	img
		width: 100%

.center
	width: 90%

	margin 0 auto
	// position: absolute
	// top 0

.slick-current
	opacity: 1
.slick-slider
	width: 90%
	margin 0 auto
.slick-track
	width: 90%
	margin 0 auto
