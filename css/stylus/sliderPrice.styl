// 	width 100%
.center div
	text-align center
.center div p 
	margin-top 10px	
.slider-price-bg
	position: absolute
	top 0
	opacity 0
	transition-duration 0.5s
	&:hover
		opacity 1
	// z-index 50
.slider-price-bg-text
	width 100%
	height 30px
	background-color: black
	opacity .75
	position: absolute
	bottom 0
.slider-price-bg-text-name
	color white
	display block
	margin-top 6px
	font-size 16px