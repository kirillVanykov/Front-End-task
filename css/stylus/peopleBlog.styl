.people-blog
	width 90%
	margin auto
.people-blog-name
	width 275px
	height 18px
	padding-top 35px
	margin auto
	text-align center
.people-blog-name-first-icon
	display inline-block
	float left
	margin-top 4px
.people-blog-name-last-icon
	display inline-block
	float right
	margin-top 4px
.people-blog-name-first-icon-small
	display none
	float left
	margin-top 7px
.people-blog-name-last-icon-small
	display none
	float right
	margin-top 7px
.people-blog-name-name
	display inline-block
	font-size 18px
.people-blog-content
	width 100%
	display flex
	margin-top 40px
	justify-content space-between
	align-items center
	text-align center
.people-blog-content-img
	display inline-block
	position relative
.people-blog-content-img img 
	display inline-block
	max-width 100%
	// &:first-child
	// 	padding-left 0
.people-blog-content-img p
	// width 100%
	// height 100%
	display inline-block
	color white
	margin-top 50%
.people-blog-content-img div
	max-width 100%
	max-height 100%
	display inline-block
	background-color rgba(0, 0, 0, .5)
	opacity 0
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	transition-duration 0.5s
	// text-align center
	&:hover
		opacity 1
		

	
	
	