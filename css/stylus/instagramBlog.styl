.instagram-blog
	width 90%
	margin auto
.instagram-blog-name
	width 400px
	height 18px
	// margin-top 35px;
	margin auto
	text-align center
.instagram-blog-name-first-icon
	display inline-block
	float left
	margin-top 4px
	padding-top 35px
.instagram-blog-name-last-icon
	display inline-block
	float right
	margin-top 4px
	padding-top 35px
.instagram-blog-name-first-icon-small
	display none
	float left
	margin-top 7px
.instagram-blog-name-last-icon-small
	display none
	float right
	margin-top 7px
.instagram-blog-name-name
	display inline-block
	font-size 18px
	padding-top 35px
	// margin-top 35px
.instagram-blog-content
	width 100%
	display flex
	margin-top 40px
	padding-top 35px
	justify-content space-between
	align-items center
	text-align center
.instagram-blog-content-img
	display inline-block
	position relative
.instagram-blog-content-img img 
	display inline-block
	max-width 100%
	// &:first-child
	// 	padding-left 0
.instagram-blog-content-img p
	width 100%
	// height 100%
	display inline-block
	color white
	margin-top 50%
	&:first-child
		position absolute
		top -20%
		// left 41%
.like
	// width 100%
	// height 100%
	color white
	&:active
		opacity 0.5
	&:hover
		cursor pointer
.instagram-blog-content-img div
	max-width 100%
	max-height 100%
	display inline-block
	background-color rgba(0, 0, 0, .5)
	opacity 0
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	transition-duration 0.5s
	// text-align center
	&:hover
		opacity 1
		